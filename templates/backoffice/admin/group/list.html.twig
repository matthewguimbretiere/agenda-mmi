{% extends 'backoffice/layout.html.twig' %}
{% block suite_title %}liste des groupe{% endblock %}
{% block suite_stylesheets %}<link href="{{ asset('css/listes.css') }}" rel="stylesheet">{% endblock %}
{% block suite_body %}
<h1>Liste des groupe</h1>
<a href="{{path("back-group-add")}}" type="button" class="btn btn-outline-light" id="add">Ajouter un groupe <i class="fas fa-plus"></i></i></a>
<ul class="list-group">
{% for group in groups %}
<li class="list-group-item bg-dark text-light">
<span># {{group.id}} | </span>
<span>Name :  {{group.name}} | </span>
<span>Type :  {{group.type}} | </span>
<span>Semester :  {{group.semester}} | </span>
<span>Campain :  {{group.campain}}</span>
<a href="{{path("back-group-edit", {"id":group.id})}}" type="button" class="btn btn-outline-light">Ã‰diter <i class="fas fa-edit"></i></a>
<a href="{{path("back-group-delete", {"id":group.id})}}" type="button" class="btn btn-outline-danger">Supprimer <i class="fas fa-trash-alt"></i></a>
</li>
{% endfor %}
</ul>
{% endblock %}