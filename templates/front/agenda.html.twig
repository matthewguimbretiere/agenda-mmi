{% extends 'base.html.twig' %}

{% block title %}Les devoirs{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/agenda.css') }}" rel="stylesheet">
    <link href="{{ asset('fullcalendar/lib/main.css') }}" rel='stylesheet' />
{% endblock %}
{% block body %}
<section class="tableau_devoir">
    <div class="btn-group btn-group-toggle mt-2 mb-3" data-toggle="buttons">
        {% if datas.tp != "null" and datas.td != "null" %}
            <label class="btn btn-secondary active">
                <a href="{{ path('front-tp-all', {"campain":datas.campain, "semester": datas.semester, "td": datas.td, "tp": datas.tp}) }}" class="text-white"> Tous </a> 
            </label> 
            <label class="btn btn-secondary active">
                <a href="{{ path('front-tp-unique', {"campain":datas.campain, "semester": datas.semester, "tp": datas.tp}) }}" class="text-white"> TP </a> 
            </label> 
            <label class="btn btn-secondary active">
                <a href="{{ path('front-td-unique', {"campain":datas.campain, "semester": datas.semester, "td": datas.td}) }}" class="text-white"> TD </a> 
            </label> 
        {% endif %}
        {% if datas.tp != "null" and datas.td == "null" %}
            <label class="btn btn-secondary active">
                <a href="{{ path('front-tp-unique', {"campain":datas.campain, "semester": datas.semester, "tp": datas.tp}) }}" class="text-white"> TP </a> 
            </label> 
        {% endif %}
        {% if datas.tp == "null" and datas.td != "null" %}
            <label class="btn btn-secondary active">
                <a href="{{ path('front-td-unique', {"campain":datas.campain, "semester": datas.semester, "td": datas.td}) }}" class="text-white"> TD </a> 
            </label> 
        {% endif %}
        <label class="btn btn-secondary active">
            <a href="{{ path('front-cm-unique', {"campain":datas.campain, "semester": datas.semester}) }}" class="text-white"> CM </a> 
        </label> 
    </div>
